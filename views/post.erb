<div class="container">
    <h4>Пост <%= @row['id'] %></h4>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <%= @row['postdate'] %>
        </div>
        <div class="card-body">
            <h4 class="card-title"><%= @row['username'] %></h4>
            <p class="card-text"><%= @row['post'] %></p>
        </div>
    </div>
    <h5>Написать комментарий</h5>
    <form action="/post/<%= @row['id'] %>" method="POST">
        <div class="mb-3">
            <label class="form-label">Ваше имя</label>
            <input name="commentusername" class="form-control" id="exampleDataList" placeholder="Имя" style="width: 50rem;">
            <label class="form-label">Комментарий</label>
            <textarea name="newcomment" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Напишите Ваш комментарий" style="width: 50rem;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
    </br>
    <h4>Комментарии</h4>
    <% @comments.each do |comment| %>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <%= comment['comdate'] %>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= comment['commentusername'] %></h4>
          <p class="card-text"><%= comment['comment'] %></p>
        </div>
      </div>
    <% end %>
</div>