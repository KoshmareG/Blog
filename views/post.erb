<div class="container">
    <h4>Пост <%= @row['id'] %></h4>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <h6 class="card-title"><%= @row['postdate'] %></h6>
        </div>
        <div class="card-body">
            <p class="card-text"><%= @row['post'] %></p>
        </div>
    </div>
    <h5>Написать комментарий</h5>
    <form action="/post/<%= @row['id'] %>" method="POST">
        <div class="mb-3">
            <textarea name="newcomment" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Напишите Ваш комментарий" style="width: 50rem;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
    <h4>Комментарии</h4>
</div>