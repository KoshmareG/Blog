<h4>Последние посты</h4>
<% @userpost.each do |userpost| %>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <%= userpost.created_at %>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= userpost.name %></h4>
          <p class="card-text"><%= userpost.post %></p>
          <a href="/post/<%= userpost.id %>" class="btn btn-primary">Коментарии</a>
        </div>
      </div>
<% end %>