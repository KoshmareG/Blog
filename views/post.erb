<div class="container">
    <h4>Пост <%= @post_id %></h4>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <%= @userpost.created_at %>
        </div>
        <div class="card-body">
            <h4 class="card-title"><%= @userpost.name %></h4>
            <p class="card-text"><%= @userpost.post %></p>
        </div>
    </div>
    <h5>Написать комментарий</h5>
    <form action="/post/<%= @post_id %>" method="POST">
        <div class="mb-3">
            <label class="form-label">Ваше имя</label>
            <input name="comment[commentname]" class="form-control" id="exampleDataList" placeholder="Имя" style="width: 50rem;" value="">
            <label class="form-label">Комментарий</label>
            <textarea name="comment[usercomment]" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Напишите Ваш комментарий" style="width: 50rem;" value=""></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
    </br>
    <h4>Комментарии</h4>
    <% @comments.each do |comment| %>
    <div class="card mb-3" style="width: 50rem;">
        <div class="card-header">
            <%= comment.created_at %>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= comment.commentname %></h4>
          <p class="card-text"><%= comment.usercomment %></p>
        </div>
      </div>
    <% end %>
</div>